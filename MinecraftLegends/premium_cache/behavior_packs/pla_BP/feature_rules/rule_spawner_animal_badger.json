{
  "format_version": "1.13.0",
  "minecraft:feature_rules": {
    "description": {
      "identifier": "badger:rule_spawner_animal_badger",
      "places_feature": "badger:feature_spawner_animal_badger"
    },
    "conditions": {
      "enabled": true,
      "placement_pass": 5,
      "minecraft:biome_filter": [
        {
          "any_of": [
            {
              "test": "has_biome_tag",
              "operator": "==",
              "value": "mountain_foothills"
            },
            {
              "test": "has_biome_tag",
              "operator": "==",
              "value": "mountain_parent_valleys"
            }
          ]
        }
      ]
    },
    "distribution": {
      "early_out": "query.water_distance(v.scatteredx, v.scatteredz) <= 2",
      "iterations": "1",
      "scatter_chance": "query.get_game_rule_value('roaming_animals') ? 2 : 0",
      "x": {
        "distribution": "uniform",
        "extent": [
          4,
          12
        ]
      },
      "y": "query.heightmap(variable.worldx, variable.worldz)",
      "z": {
        "distribution": "uniform",
        "extent": [
          4,
          12
        ]
      }
    }
  }
}